HT( ht_CFX, <&kp>, <&m_loose_CFX> )
HT( ht_GRV, <&kp>, <&m_loose_GRV> )
HT( ht_TLD, <&kp>, <&m_loose_TLD> ) 

// automatic nbsp on tap
HT( ht_LGLM, <&kp>, <&m_nbsp_LGLM> )
HT( ht_RGLM, <&kp>, <&m_nbsp_RGLM> )

// automatic nbsp on hold
HT_FAST( ht_COLN, <&m_nbsp_COLN>, <&kp> )
